<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.sty.notification.MainActivity">

   <Button
       android:id="@+id/btn_send_chat_notification"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:text="Send Important Notification"
       android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_send_subscribe_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Send Normal Notification"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_close_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Close Notification"
        android:textAllCaps="false"/>

</LinearLayout>
